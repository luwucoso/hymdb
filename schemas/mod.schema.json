{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/mod-index/mod.schema.json",
  "title": "Mod Entry",
  "description": "The JSON Schema for all indexed mods in this DB",
  "type": "object",
  "required": [
    "schema_version",
    "mod_id",
    "name",
    "authors",
    "links"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 0,
      "description": "Version of this schema used by the entry."
    },
    "mod_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{0,62}$",
      "description": "Stable, lowercase identifier for the mod."
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Readable mod name."
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Short one-line description of the mod."
    },
    "description": {
      "type": "string",
      "description": "Optional longer description. Markdown allowed."
    },
    "authors": {
      "type": "array",
      "minItems": 1,
      "description": "Primary author(s) of the mod.",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false
      }
    },
    "contributors": {
      "type": "array",
      "description": "Additional contributors.",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false
      }
    },
    "license": {
      "type": "string",
      "description": "Optional license identifier (SPDX or otherwise)."
    },
    "game_versions": {
      "type": "array",
      "description": "Game versions this mod is compatible with.",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "description": "Free-form tags.",
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Optional mod dependencies. (To Be Defined)",
      "items": {
        "type": "object",
        "properties": {
        },
        "additionalProperties": false
      }
    },
    "links": {
      "type": "object",
      "minProperties": 1,
      "description": "Where the mod is hosted.",
      "additionalProperties": {
        "type": "string",
        "format": "uri"
      }
    },
    "issues": {
      "type": "string",
      "format": "uri",
      "description": "Issue tracker URL."
    },
    "donation": {
      "type": "string",
      "format": "uri",
      "description": "Donation or support URL."
    }
  },
  "additionalProperties": false
}
